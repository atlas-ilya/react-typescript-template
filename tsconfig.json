{
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.spec.ts"],
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "Node",
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@assets/*": ["assets/*"],
      "@images/*": ["assets/images/*"],
      "@components/*": ["components/*"],
      "@ui/*": ["reducers/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"]
    }
  }
}
